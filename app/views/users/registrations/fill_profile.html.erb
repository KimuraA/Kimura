<div class = "container" align = "center" id = "fill_profile_form">
  <div class="col-lg-12">
  </br>
  <h1 align="center">You are almost ready. Just one more step to get more jobs!</h1>
  </br>
  <%= form_for(@user, url: update_profile_after_sign_up_path, method: :post ) do |f| %>
    <div class="panel panel-default">
      <div class="panel-heading">

        <div class="form-group">
          <%= f.label "Select Your Skills" %>
          <%= f.select :skills, Category.select('distinct on(title) *').collect{|c| [c.title, c.id]}, {}, {multiple: true, class: "dropdown form-control"} %>
        </div>

        <div class="form-group">
          <%= f.label "Overview" %>
          <%= f.text_area :overview, autofocus: true, class: "form-control" , placeholder: "Please describe what you did, what you do, what are you looking for.  A more detailed description helps you to get more jobs", rows: 20 %>
        </div>
        
        <br>
        <div class="form-group" id = "button">
          <%= f.submit "Get Started", class: "btn btn-success" %>
        </div>
        <div id ="button">
          <%= render "users/shared/links" %>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>