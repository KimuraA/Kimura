<div class = "container" align = "center" id = "edit_profile_form">
  <div class="col-lg-12">
  </br>
  <h1 align="center">Change your password</h1>
  </br>
  <%= form_for(@user, url: update_settings_path, html: { method: :patch }) do |f| %>
    <%= devise_error_messages! %>
    <div class="panel panel-default">
      <div class="panel-heading">

        <div class="form-group">
          <%= f.label "New Password" %><br />
          <%= f.password_field :password, autocomplete: "off" %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.label "Password Confirmation" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>

        <div class="form-group">
          <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, autocomplete: "off" %>
        </div>
       
        <br>
        <div class="form-group" id = "button">
          <%= f.submit "Update", class: "btn btn-success" %>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>